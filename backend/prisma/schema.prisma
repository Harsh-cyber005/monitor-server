generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model VM {
  vmId        String   @id
  vmName      String   @unique
  ramUsedMB   Int
  ramTotalMB  Int
  cpuUsedPct  Float
  diskUsedMB  Int
  diskTotalMB Int
  timestamp   DateTime @default(now())
  hostname    String
  publicIp    String
  status      Status
  metrics     Metric[]
  auth        VMAuth?
  tokens      Token[]

  @@index([vmId, timestamp])
}

model Metric {
  id          Int      @id @default(autoincrement())
  vmId        String
  vm          VM       @relation(fields: [vmId], references: [vmId], onDelete: Cascade)
  status      Status
  ramUsedMB   Int
  ramTotalMB  Int
  cpuUsedPct  Float
  diskUsedMB  Int
  diskTotalMB Int
  timestamp   DateTime @default(now())
  hostname    String
  publicIp    String

  @@index([vmId, timestamp])
}

model VMAuth {
  vmId          String    @id
  vm            VM        @relation(fields: [vmId], references: [vmId], onDelete: Cascade)
  vmName        String
  secretHash    String
  createdAt     DateTime  @default(now())
  establishedAt DateTime?
  isEstablished Boolean   @default(false)
}

model Token {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  vmId      String
  vm        VM       @relation(fields: [vmId], references: [vmId], onDelete: Cascade)
  createdAt DateTime @default(now())
  isUsed    Boolean  @default(false)
  expiresAt DateTime
}

enum Status {
  running
  stopped
  unknown
}
