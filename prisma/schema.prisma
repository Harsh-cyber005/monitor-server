// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma" 
  // optional output field, use this to specify a custom output directory
  // by default, the client is generated in node_modules/@prisma/client
  // and can be imported from there as import { PrismaClient } from '@prisma/client'
}

datasource db {
  provider = "sqlite"
}

// url field is not required for prisma version > 7, and url can be set using environment variable in the prisma.config.js file

model VM {
  vmId        String   @id
  vmName      String
  ramUsedMB   Int
  ramTotalMB  Int
  cpuUsedPct  Float
  diskUsedMB  Int
  diskTotalMB Int
  timestamp   DateTime @default(now())
  hostname    String
  publicIp    String
  status      Status
  metrics     Metric[]
  auth        VMAuth?

  @@index([vmId, timestamp])
}

model Metric {
  id          Int      @id @default(autoincrement())
  vmId        String
  vm          VM       @relation(fields: [vmId], references: [vmId], onDelete: Cascade)
  status      Status
  ramUsedMB   Int
  ramTotalMB  Int
  cpuUsedPct  Float
  diskUsedMB  Int
  diskTotalMB Int
  timestamp   DateTime @default(now())
  hostname    String
  publicIp    String

  @@index([vmId, timestamp])
}

model VMAuth {
  vmId          String   @id
  vm            VM       @relation(fields: [vmId], references: [vmId], onDelete: Cascade)
  vmName        String
  secretHash    String
  createdAt     DateTime @default(now())
  establishedAt DateTime?
  isEstablished Boolean  @default(false)
}

enum Status {
  running
  stopped
  error
}
